<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XamarinFormsDemo.CustomControls"
             x:Class="XamarinFormsDemo.View.RadioButtonPage"
             BindingContext="{Binding Source={StaticResource Locator}, Path=RadioButtonVm}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Radio Button Example"
                   Style="{StaticResource MainTitleStyle}"
                   Margin="0,10" />
            <controls:RadioButton Checked="{Binding Checked}"
                                  WidthRequest="100"
                                  HeightRequest="100"
                                  CheckedImage="checked.png"
                                  UncheckedImage="unchecked.png"/>
            <controls:RadioButton Checked="{Binding CheckedDisabled}"
                                  WidthRequest="100"
                                  HeightRequest="100"
                                  CheckedImage="checked.png"
                                  UncheckedImage="unchecked.png"
                                  IsEnabled="False"
                                  OpacityWhenIsDisabled="0.3"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>