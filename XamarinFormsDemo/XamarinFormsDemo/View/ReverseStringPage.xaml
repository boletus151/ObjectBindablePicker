<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsDemo.View.ReverseStringPage"
             BindingContext="{Binding Source={StaticResource Locator}, Path=ReverseStringVm}">

    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsEnabled="{Binding IsBusy, Mode=TwoWay}" 
                               IsVisible="{Binding IsBusy, Mode=TwoWay}"
                               IsRunning="{Binding IsBusy, Mode=TwoWay}"
                               BackgroundColor="Red"
                               Color="Olive"/>
            <Entry Text="{Binding MyText}"
                   Placeholder="Enter text"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Reverse"
                    Command="{Binding ReverseCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>